{
	"compilerOptions": {
		"outDir": "./dist/",
		"module": "commonjs",
		"target": "es2017",
		"sourceMap": true,
		"noImplicitAny": false,
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./",
		"moduleResolution": "node",
		"paths": {
			"~/*": [
				"./src/*"
			]
		},
	},
}